<h1>
    Edit tip:
</h1>


<form method="post" action="/quizzes/<%= tip.quizId %>/tips/<%= tip.id %>/update?_method=PUT">

    <div class="wideRow">

        <span class="itemNarrow">Tip:</span>

        <input type="text" class="itemWide" id="tip" name="text" value="<%= tip.text %>" placeholder=" Tip " autocomplete="off" />
        <input type="submit" value="Add">
    </div>
</form>

<a href="/goback"><button type="button">Cancel</button></a>